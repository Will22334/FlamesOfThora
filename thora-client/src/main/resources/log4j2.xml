<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>
    <Appenders>
        <!-- File Appender -->
		<File name="LOG_FILE" fileName="${basePath}/client.log" append="false">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5p][%-7c{1}] %m%n</Pattern>
			</PatternLayout>
		</File>
        <!-- Console Appender -->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5p][%-7c{1}] %m%n" />
        </Console>
    </Appenders>
    <Loggers>
    	<Logger name="com.thora" level="debug" additivity="false">
			<AppenderRef ref="STDOUT" level="debug" />
			<AppenderRef ref="LOG_FILE" level="debug" />
		</Logger>
        <Root level="info">
			<AppenderRef ref="STDOUT" level="info"/>
			<AppenderRef ref="LOG_FILE" level="info"/>
        </Root>
    </Loggers>
</Configuration>